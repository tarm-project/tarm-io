FROM tarmio/builders:ubuntu14.04-gcc4.8.4-boost1.55-cmake3.10.3

LABEL maintainer="av@tcloud.pro"

RUN mkdir -p ${BUILD_DIR} && \
    cd ${BUILD_DIR} && \
    wget https://cmake.org/files/v3.10/cmake-3.10.3.tar.gz && \
    tar -xf cmake* && \
    cd cmake* && \
    ./configure --parallel=$(nproc) && \
    make -j $(nporc) && \
    make install && \
    ldconfig && \
    rm -rf ${BUILD_DIR}