FROM tarmio/builders:ubuntu20.04-gcc9.3.0-boost1.71-cmake3.16.3

LABEL maintainer="av@tcloud.pro"

ENV BUILD_DIR=/build

RUN mkdir ${BUILD_DIR} && \
    cd ${BUILD_DIR} && \
    wget https://github.com/google/googletest/archive/release-1.10.0.tar.gz && \
    tar -xf release* && \
    cd goog* && \
    mkdir build && \
    cd build && \
    cmake -DBUILD_SHARED_LIBS=ON .. && \
    make -j $(nproc) && \
    make install && \
    ldconfig && \
    rm -rf ${BUILD_DIR}

