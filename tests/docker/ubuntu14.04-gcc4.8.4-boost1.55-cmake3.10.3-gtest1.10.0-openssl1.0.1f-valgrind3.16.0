FROM tarmio/builders:ubuntu14.04-gcc4.8.4-boost1.55-cmake3.10.3-gtest1.10.0-openssl1.0.1f

LABEL maintainer="av@tarm.io"

RUN apt -y update && apt -y install libc6-dbg cgdb tmux

RUN mkdir -p ${BUILD_DIR} && \
    cd ${BUILD_DIR} && \
    wget https://sourceware.org/pub/valgrind/valgrind-3.16.0.tar.bz2 && \
    tar -xf valgrind* && \
    cd valgrind* && \
    ./configure && \
    make -j $(nporc) && \
    make install && \
    ldconfig && \
    rm -rf ${BUILD_DIR}