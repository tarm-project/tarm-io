FROM tarmio/builders:ubuntu20.04-clang9.0.1-boost1.71-cmake3.17.3-gtest1.8.1

LABEL maintainer="av@tarm.io"

RUN mkdir ${BUILD_DIR} && \
    cd ${BUILD_DIR} && \
    wget https://www.openssl.org/source/openssl-1.1.1g.tar.gz && \
    tar -xf openssl* && \
    cd openssl* && \
    CC=clang CXX=clang== ./config && \
    make -j $(nproc) && \
    make install && \
    ldconfig && \
    rm -rf ${BUILD_DIR}